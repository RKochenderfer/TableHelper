@TableHelper.Api_HostAddress = https://localhost:7042/api

### POST Generate NPC
< {%
    request.variables.set("npcsToGenerate", 2)
%}
POST https://localhost:7042/api/XwnGenerators/
Accept: application/json
Content-Type: application/json

{
  "type": "Npc",
  "npcGenerationRequest": {
    "npcsToGenerate": {{npcsToGenerate}},
    "preferredNameGender": "Male",
    "preferredNameOrigin": "English"
  }
}

> {%
    client.test("Request executed successfully", function () {
        client.assert(response.status === 200, "Response status is not 200");
        const isSuccessful = jsonPath(response.body, "$.isSuccessful")
        client.assert(isSuccessful, "true");
        const npcInfo = jsonPath(response.body, "$.npcInfo")

        client.assert(npcInfo.length, 2);
    });
%}

